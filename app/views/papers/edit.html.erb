<%= form_for :paper, url: paper_path(@paper), method: :patch do |f| %>
    <p>
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :venue %><br />
      <%= f.text_field :venue %>
    </p>
    <p>
      <%= f.label :year %><br />
      <%= f.text_field :year %>
    </p>

    <% (1..5).each do |i| %>
        <%= f.label "Author #{i}", for: "paper_author_id_#{1}" %>
        <%= f.collection_select :author_ids, @authors, :id, :name, {selected: @paper.author_ids[i], include_blank: '(none)'}, {name: "paper[author_ids][]", id: "paper_author_id_#{i}"} %>
        <br />
    <% end %>

    <p>
      <%= f.submit %>
    </p>
<% end %>